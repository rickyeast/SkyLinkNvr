# Docker Environment Configuration for Skylink NVR

# Database Configuration
# For host network mode: use 127.0.0.1:5432
# For bridge network mode: use postgres:5432
DATABASE_URL=postgresql://skylink:your_secure_password@127.0.0.1:5432/skylink_nvr

# PostgreSQL Configuration
POSTGRES_PASSWORD=your_secure_password

# Node Environment
NODE_ENV=production

# Optional: Host system monitoring paths (for Docker host network mode)
HOST_PROC=/host/proc
HOST_SYS=/host/sys