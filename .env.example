# Skylink Enterprise NVR - Environment Configuration Template
# Copy this file to .env and customize for your environment

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# For Docker deployment (recommended)
DATABASE_URL=postgresql://skylink:skylink_secure_pass@postgres:5432/skylink_nvr

# For local PostgreSQL
# DATABASE_URL=postgresql://skylink:skylink_secure_pass@localhost:5432/skylink_nvr

# PostgreSQL Configuration
POSTGRES_PASSWORD=skylink_secure_pass

# Database Connection Pool
PGPOOL_MIN=2
PGPOOL_MAX=20

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_change_this_in_production

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379

# Storage Paths
RECORDINGS_PATH=./recordings
SNAPSHOTS_PATH=./snapshots
LOGS_PATH=./logs

# External Services
# CodeProjectAI Configuration
CODEPROJECT_AI_URL=http://localhost:32168
CODEPROJECT_AI_KEY=your_codeproject_ai_api_key

# ONVIF Discovery Settings
ONVIF_DISCOVERY_TIMEOUT=5000
ONVIF_DISCOVERY_PORT=3702

# RTSP Stream Settings
RTSP_TIMEOUT=30000
RTSP_BUFFER_SIZE=1048576

# AI Detection Settings
AI_DETECTION_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.5
AI_DETECTION_INTERVAL=5000

# Recording Settings
RECORDING_ENABLED=true
RECORDING_QUALITY=high
RECORDING_RETENTION_DAYS=30

# Security Settings
ENABLE_HTTPS=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Performance Settings
MAX_CONCURRENT_STREAMS=10
STREAM_BUFFER_SIZE=65536
DETECTION_WORKER_THREADS=2

# Network Settings
NETWORK_INTERFACE=0.0.0.0
API_RATE_LIMIT=100
CORS_ORIGINS=*

# Docker Network Settings
# For Docker host network mode
# DOCKER_HOST_NETWORK=true
# HOST_PROC=/host/proc
# HOST_SYS=/host/sys

# Development Settings (for development only)
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000